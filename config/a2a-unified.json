      "overrides": {}
    },
    {
      "agent_name": "state_agent",
      "project_name": "state",
      "location": "./ui/state/",
      "config_file": "./ui/state/a2a-config.json",
      "overrides": {}
    },
    {
      "agent_name": "utils_agent",
      "project_name": "utils",
